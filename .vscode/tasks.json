{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "MainTask",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-I",
				"${workspaceFolder}/include",
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/build/${workspaceFolderBasename}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/g++"
		}
	]
}